<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
									 http://www.springframework.org/schema/beans/spring-beans-4.0.xsd"
	default-autowire="byName">

	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean"
		autowire="no">
		<property name="triggers">
			<list>
				<ref bean="testXmlTrigger" />
			</list>
		</property>
	</bean>

	<bean id="testXmlTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="testXmlJob" />
		<property name="cronExpression" value="0 */30 * * * ?" />
	</bean>

	<bean id="testXmlJob"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="testXmlTask">
		</property>
		<property name="targetMethod" value="check"></property>
	</bean>

	<bean id="testXmlTask" class="com.kedacom.ysl.task.TestXmlTask" />


</beans>